<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= form_with model: @book do |f| %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="field">
      <div class="field_with_errors"><label for="book_title">Title</label></div>
      <div class="field_with_errors"><input class="book_title" type="text" value="" name="book[title]" id="book_title"></div>
    </div>
    <div class="field">
      <div class="field_with_errors"><label for="book_body">Body</label></div>
      <div class="field_with_errors"><textarea class="book_body" name="book[body]" id="book_body"></textarea></div>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
<% else %>
  <%= form_with model: @book do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>
 |
<%= link_to 'Back', books_path %>
